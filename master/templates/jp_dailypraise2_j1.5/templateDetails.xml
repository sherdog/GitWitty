<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="template">
  <name>jp_dailypraise2_j1.5</name>
  <version>2.0.1</version>
  <creationDate>02/15/10</creationDate>
  <author>www.joomlapraise.com</author>
  <authorEmail>support@joomlapraise.com</authorEmail>
  <authorUrl>http://www.joomlapraise.com</authorUrl>
  <copyright>Copyright 2010 PixelPraise LLC, All rights reserved.</copyright>
  <license>GNU/GPL</license>
  <description>DailyPraise Redux Joomla! Template with K2 compatibility</description>
  <files>
    <filename>index.php</filename>
    <filename>component.php</filename>
    <filename>favicon.ico</filename>
    <filename>templateDetails.xml</filename>
    <filename>template_thumbnail.png</filename>
	<filename>params.ini</filename>    
	<folder>css</folder>
	<folder>admin</folder>
	<folder>html</folder>
	<folder>images</folder>
	<folder>assets</folder>	
  </files>
  <positions>
    <position>left</position>
    <position>right</position>
    <position>top</position>
    <position>advert1</position>
    <position>advert2</position>
    <position>advert3</position>	
    <position>bottom</position>
    <position>banner</position>
    <position>breadcrumb</position>
    <position>inset</position>
    <position>user1</position>
    <position>user2</position>
    <position>user3</position>
    <position>user4</position>
    <position>user5</position>
    <position>user6</position>
    <position>user7</position>
    <position>user8</position>
    <position>user9</position>
    <position>debug</position>
    <position>footer</position>
  </positions>
  <languages>
    <language tag="en-GB">en-GB.tpl_jp_dailypraise2_j1.5.ini</language>
  </languages>
  <administration>
    <languages folder="admin">
      <language tag="en-GB">en-GB.tpl_jp_dailypraise2_j1.5.ini</language>
    </languages>
  </administration>
  <params addpath="/templates/jp_dailypraise_j1.5/assets/cmsmarketconnect">
	<param name="templateTheme" type="list" default="theme1" label="Template Theme" description="Choose your template theme">
      <option value="theme1">theme1</option>
	  <option value="theme2">theme2</option>
    </param>
	<param name="menuColor" type="list" default="red" label="Mainmenu color" description="Choose your menu color">
      <option value="red">red</option>
	  <option value="gray">gray</option>
	  <option value="green">green</option>
	  <option value="blue">blue</option>
	  <option value="purple">purple</option>
	  <option value="yellow">yellow</option>
	  <option value="orange">orange</option>
    </param>
    <param name="fontFamily" type="list" default="georgia" label="Body Font Family" description="Choose your font family">
      <option value="arial">Arial, Helvetica, sans-serif</option>
      <option value="times">"Times New Roman", Times, serif</option>
      <option value="courier">"Courier New", Courier, monospace</option>
      <option value="georgia">Georgia,"Times New Roman", Times, serif</option>
    </param>
    <param name="headingFontFamily" type="list" default="georgia" label="Heading Font Family" description="Choose your font family">
      <option value="arial">Arial, Helvetica, sans-serif</option>
      <option value="times">"Times New Roman", Times, serif</option>
      <option value="courier">"Courier New", Courier, monospace</option>
      <option value="georgia">Georgia,"Times New Roman", Times, serif</option>
    </param>
    <param name="fontColor" type="text" default="" label="Custom Font Color" description="Type A Hexadecimal Color(#123456) for the font color(Do forget to include the pound(#) sign)" />
    <param name="headingColor" type="text" default="" label="Custom Heading Color" description="Type A Hexadecimal Color(#123456) for the heading color(Do forget to include the pound(#) sign)" />
    <param name="linkColor" type="text" default="" label="Custom Link Color" description="Type A Hexadecimal Color(#123456) for the links color(Do forget to include the pound(#) sign)" />
    <param name="linkHoverColor" type="text" default="" label="Custom Link Hover Color" description="Type A Hexadecimal Color(#123456) for the link hover color(Do forget to include the pound(#) sign)" />
	<param name="jp_dailypraise_j1.5" label="Version Information" description="Up to date version, support, and review information from CMS Market." type="cmsmarketconnect" />
	</params>
</install>
